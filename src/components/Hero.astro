// Removing the FlippingImageGallery import as it's no longer needed
---

<section class="relative bg-gradient-to-br from-gray-50 to-blue-50 py-20 md:py-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col md:flex-row items-center">
      <div class="md:w-1/2 md:pr-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-dark">
          Founder-Friendly<br />
          <span class="text-primary">Photos</span>
        </h1>
        <p class="text-lg md:text-xl mb-8 text-gray-700">
          I'm a founder, you're a founder. You need photos, I take photos. It's a simple GTM motion.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="#services" class="bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-medium transition">
            I need photos
          </a>
          <a href="#about" class="border border-primary text-primary hover:bg-primary/5 px-6 py-3 rounded-lg font-medium transition">
            I need convincing
          </a>
        </div>
      </div>
      <div class="md:w-1/2 mt-12 md:mt-0">
        <div class="relative">
          <div class="absolute -inset-0.5 bg-gradient-to-r from-primary to-secondary rounded-2xl blur opacity-30"></div>
          <div class="relative w-full">
            <div class="rounded-xl overflow-hidden border-4 border-white shadow-xl">
              <img
                src="/images/my-work/hero.jpg"
                alt="Professional photography by Robert Ross"
                class="w-full h-auto object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
