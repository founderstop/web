---
import { Image } from 'astro:assets';
---

<section id="equipment" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-14">
      <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">My Equipment</h2>
      <p class="text-lg text-gray-700 max-w-3xl mx-auto">
        Just like my code, my equipment is top-tier.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
      <div class="relative">
        <div class="relative w-full h-full">
          <!-- Stacked images with offset and shadow effect -->
          <div class="relative max-w-sm mx-auto">
            <!-- Background image with shadow and rotation -->
            <div class="absolute -bottom-6 -right-24 w-64 h-64 rounded-lg shadow-xl rotate-6 overflow-hidden border-4 border-white">
              <Image
                src="/images/my-work/equipment-02.jpeg"
                alt="Sony camera lens detail"
                class="w-full h-full object-cover"
                width={256}
                height={256}
              />
            </div>

            <!-- Front image (main equipment) -->
            <div class="relative w-72 h-80 rounded-lg shadow-xl -rotate-3 overflow-hidden border-4 border-white z-10">
              <Image
                src="/images/my-work/equipment-01.jpeg"
                alt="Sony A7R IV camera setup"
                class="w-full h-full object-cover"
                width={288}
                height={320}
              />
            </div>

            <!-- Decorative gradient overlay -->
            <div class="absolute -inset-2 bg-gradient-to-r from-primary to-secondary rounded-2xl blur opacity-30 -z-10"></div>
          </div>
        </div>
      </div>

      <div>
        <h3 class="text-2xl font-bold text-dark mb-6">This Sh*t is expensive</h3>

        <div class="space-y-6">
          <div class="bg-gray-50 p-6 rounded-xl">
            <h4 class="font-bold text-primary text-xl mb-2">Sony A7R IV Camera</h4>
            <p class="text-gray-700">Mirrorless, full frame, 61MP. It's a beast.</p>
          </div>

          <div class="space-y-4">
            <h4 class="font-bold text-dark text-lg">Sony G Master Lenses Only:</h4>
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span><span class="font-medium">50mm f/1.2</span></span>
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span><span class="font-medium">24-70mm f/2.8</span></span>
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span><span class="font-medium">70-200mm f/2.8</span></span>
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span><span class="font-medium">24mm f/1.4</span></span>
              </li>
              <li class="flex items-start">
                <span class="text-primary mr-2">•</span>
                <span><span class="font-medium">12-24mm f/2.8</span></span>
              </li>
              <li class="flex items-start">
                <span class="mr-2 text-xs font-extralight text-gray-200">I have a problem please help me</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
